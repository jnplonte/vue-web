{
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
        "arrow-return-shorthand": 1,
        "callable-types": 1,
        "class-name": 1,
        "comment-format": [
          1,
          "check-space"
        ],
        "curly": 1,
        "eofline": 1,
        "forin": 1,
        "import-spacing": 1,
        "indent": 1,
        "interface-over-type-literal": 1,
        "label-position": 1,
        "max-line-length": [1, 320],
        "member-access": 0,
        "member-ordering": [
          1,
          {
            "order": [
              "static-field",
              "instance-field",
              "static-method",
              "instance-method"
            ]
          }
        ],
        "no-arg": 1,
        "no-console": "warn",
        "no-construct": 1,
        "no-debugger": 1,
        "no-duplicate-super": 1,
        "no-empty": 1,
        "no-empty-interface": 1,
        "no-eval": 1,
        "no-misused-new": 1,
        "no-non-null-assertion": 1,
        "no-string-literal": 0,
        "no-string-throw": 1,
        "no-switch-case-fall-through": 1,
        "no-trailing-whitespace": 1,
        "no-unnecessary-initializer": 1,
        "no-unused-expression": [1, "allow-new"],
        "no-var-keyword": 1,
        "object-literal-sort-keys": 0,
        "one-line": [
          1,
          "check-catch",
          "check-whitespace"
        ],
        "prefer-const": 1,
        "quotemark": [1, "single"],
        "radix": 1,
        "semicolon": [
          1,
          "always"
        ],
        "triple-equals": [
          1,
          "allow-null-check"
        ],
        "typedef-whitespace": [
          1,
          {
            "call-signature": "nospace",
            "index-signature": "nospace",
            "parameter": "nospace",
            "property-declaration": "nospace",
            "variable-declaration": "nospace"
          }
        ],
        "unified-signatures": 1,
        "variable-name": 0,
        "no-shadowed-variable": 1,
        "whitespace": [
          1,
          "check-branch",
          "check-decl",
          "check-operator",
          "check-separator",
          "check-type"
        ],
        "quote-props": ["error", "always"],
        "ordered-imports": 0,
        "trailing-comma": [1, {
          "singleline": "never",
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          }
        }]
      }
}
